<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.bwie.my.activity.RegisActivity">

    <EditText
        android:id="@+id/reg_mobile"
        android:layout_marginTop="200dp"
        style="@style/text"
        android:hint="请输入要注册的手机号"/>

    <EditText
        android:id="@+id/reg_password"
        android:layout_marginTop="10dp"
        style="@style/text"
        android:hint="请输入密码"
        />
    <Button
        android:id="@+id/reg_reg"
        android:layout_marginTop="10dp"
        style="@style/text"
        android:background="@drawable/kuang"

        android:text="立即注册"
        />
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c1c7ce"
            android:text="遇到问题?您可以"
            />
        <Button
            android:clickable="true"
            android:id="@+id/lian_xi_ke_fu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0678f2"
            android:background="@null"
            android:text=" 联系客服"
            />
    </LinearLayout>
    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></WebView>
</LinearLayout>
